<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:text="Представляет собой значение по оценке степени соответствия массы тела человека и роста (длины тела), в результате определения индекса можно косвенно судить о том, что масса тела находится в пределах нормы или недостаточна или наоборот избыточная масса тела."
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editF1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Рост (см)"
            android:textSize="20dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editF2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Вес (кг)"
            android:textSize="20dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/Btn1"
            android:text="Продолжить"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:text="Методические рекомендации меньше 5000 шагов в день – «сидячая работа»; 7500-9999 шагов в день – «несколько активная работа»; 10-12 тыс. шагов – «активный образ жизни»; свыше 12,5 тыс. шагов – «очень активный образ жизни»"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editS1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Количесвто шагов в день"
            android:textSize="20dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/Btn2"
            android:text="Продолжить"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:text="Характеризует функциональное состояние сердечно-сосудистой системы."
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/editT1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Частоста сердечных сокращений (уд/мин)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editT2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Систолическое артериальное давление"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editT3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Диастолическое артериальное давление"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/Btn3"
            android:text="Продолжить"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:text="Индекс используется для косвенного определения степени обеспеченности миокарда кислородом"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/editFo1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Частоста сердечных сокращений (уд/мин)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/editFo2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Диастолическое артериальное давление"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/Btn4"
            android:text="Продолжить"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:text="Дающий косвенное представление о функциональных возможностях системы внешнего дыхания."
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/editFi1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Жизненная емкость легких (мл)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/editFi2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Масса тела (кг)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/Btn5"
            android:text="Продолжить"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:text="Определяющий резервы и выносливость дыхательной и сердечно-сосудистой систем."
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/editSi1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Жизненная емкость легких (мл)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/editSi2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Проба Штанге (с)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editSi3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Частота сердечных сокращений (уд/мин)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/Btn6"
            android:text="Продолжить"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:text="Оценивающий состояние вегетативной нервной системы."
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/editSe1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Диастолическое артериальное давление"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/editSe2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Частота сердечных сокращений (уд/мин)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/Btn7"
            android:text="Продолжить"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:text="С помощью этого теста оценивают функциональные возможности системы кровообращения."
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/editE1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Частота сердечных сокращений (уд/мин)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/editE2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Систолическое артериальное давление"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editE3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Диастолическое артериальное давление"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editE4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Масса тела (кг)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editE5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Рост (см)"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/editE6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Возраст"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/Btn8"
            android:text="Продолжить"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>