<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="400dp"
        android:layout_height="480dp"
        android:padding="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/teal_700">

        <Button
            android:id="@+id/homeBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/indexBtn"
            android:backgroundTint="@color/teal_700"
            android:foreground="@drawable/ic_baseline_home_24" />

        <Button
            android:id="@+id/indexBtn"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:foreground="@drawable/ic_baseline_calculate_24"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/resultBtn"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:foreground="@drawable/ic_baseline_assignment_turned_in_24"
            android:layout_toEndOf="@+id/indexBtn"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/teal_700"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>